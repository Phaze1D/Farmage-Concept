template(name='ProviderShow')
  div(class='show-area elevation-0') 
    
        
    div(class='show-tool')
      +PaperButton classes="so-button back card-shrink-action" raise=0 rippleOn=false submit=false elevation=0
        i(class="material-icons")
          | arrow_back
          
      div(class='tool-title text-overflow')
        div
          | #{toolT}
        
      +PaperButton classes="so-button more-ver card-shrink-action" raise=0 rippleOn=true submit=false elevation=0
        i(class="material-icons")
          | more_vert
          
      
          
    div(class='top')
      img(src='/default_avatar.png')
      h3
        | #{provider.first_name} #{provider.last_name}
      h4
        | #{provider.company}
        
    div(class='scroll-section')
    
      +PaperButton classes="show-fab" elevation=2 rippleOn='true' rippleFill='white'
        div(class='plus-icon-div')
          i(class="material-icons plus-icon")
            | #{fabT}
    
      div(class='middle')
        +PaperTabPanel tabs=tabs scrollable=true classes='show-bar'     
          +PaperTab classes='active-panel show-panel' index=0
            div(class='flex-grid')
              div(class='section elevation-1')
                div(class='it')
                  div(class='info-div')
                    div(class='title')
                      | Notes
                    if provider.notes
                      div(class='info')
                        | #{provider.notes}
                    else
                      div(class='info-none')
                        | None
                    
            div(class='flex-grid')
              div(class='section elevation-1')
                i(class='material-icons')
                  | email
                
                div(class='it')
                  div(class='info-div')
                    div(class='title')
                      | Email
                    if provider.email
                      div(class='info')
                        | #{provider.email}
                    else
                      div(class='info-none')
                        | None
                      
              div(class='section elevation-1')
                i(class='material-icons')
                  | phone
                  
                div(class='it')
                  if telephones
                    each telephone in telephones
                      div(class='info-div')
                        div(class='title')
                          if telephone.name
                            | #{telephone.name}
                          else
                            | Telephone
                        div(class='info')
                            | #{telephone.number}
                  
                  else
                    div(class='info-div')
                      div(class='title')
                        | Telephones
                      div(class='info-none')
                        | None
      
              div(class='section elevation-1')
                i(class='material-icons')
                  | location_on
                  
                div(class='it')
                  if addresses
                    each address in addresses
                      div(class='info-div')
                        div(class='title')
                          if address.name
                            | #{address.name}
                          else
                            | Address
                        div(class='info')
                          div(class='add-info')
                            | #{address.street}
                          div(class='add-info')
                            | #{address.street2}
                          div(class='add-info')
                            if address.city
                              | #{address.city}, #{address.state}
                          div(class='add-info')
                            | #{address.zip_code}
                          div(class='add-info')
                            | #{address.country}
                  
                  else
                    div(class='info-div')
                      div(class='title')
                        | Addresses
                      div(class='info-none')
                        | None
        
        
            +Timestamp item=provider
            
          +PaperTab index=1
          
        
        
