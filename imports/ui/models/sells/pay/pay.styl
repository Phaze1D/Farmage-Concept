.sell-pay
  padding: 16px
  overflow-x: hidden;
  overflow-y: scroll;
  height: 100%
  background-color: white

.pa-title
  font-size: 14px
  font-weight: 300
  color: #757575

.pa-table
  width: 100%
  border: 1px solid #BDBDBD
  font-weight: 300;

  th
    padding: 10px
    color: #757575
    font-weight: 300;
    font-size: 14px

  td
    padding: 10px




.pa-table, th, td
  border-bottom: 1px solid #BDBDBD;
  border-collapse: collapse;
  text-align: center;


.pa-product
  display: flex;
  align-items: center;
  justify-content: flex-start;

  img
    width: 48px
    height: 48px
    margin: 16px
    border-radius: 50%

  div
    span
      display: block;
      font-size: 12px
      color: #757575
      text-align: left


.f-sm
  // display: inline-block;
  text-align: right;
  font-size: 14px
  margin: 10px 0

.submit-div
  display: flex;
  justify-content: space-between;
  margin: 10px 0

.cancel-b
  font-weight: 300;
  font-size: 20px
  padding: 10px 25px;

.confirm-b
  @extends .cancel-b
  background-color: #00e676
