template(name='SellCard')
  div(class='mCard')
    +PaperCard elevation=1
      div(class='show' style='display: none; opacity: 0')
        if show.get
          +SellShow sell=sell title=showTitle
        
      div(class='mCard-content')
        +PaperButton elevation=0 rippleOn=true classes='options-b' raise=0
          i(class='material-icons')
           | more_vert
        
        div(class='upper')   
          div(class='top')               
            div(class='titles')
              div(class='main-title text-overflow card-expand-action')
                =date(sell.createdAt)
              div(class='sub-title text-overflow')
                | #{sell._id} 
                      
          div(class='upper-mid')
            div(class='main' style='margin: 0;')
              div(class='info')
                | $#{sell.total_price} 
                
              div(class='sub')
                div(class='sub-unit')
                  div(class='label')
                    | Sub Total
                  div(class='sub-info')
                    | $#{sell.sub_total}   
                div(class='sub-unit')
                  div(class='label')
                    | Tax Total
                  div(class='sub-info')
                    | $#{sell.tax_total} 
                div(class='sub-unit')
                  div(class='label')
                    | Discount
                  if sell.discount_type
                    div(class='sub-info')
                      | #{sell.discount}%        
                  else
                    div(class='sub-info')
                      | $#{sell.discount}  
                      
        div(class='middle')
          div(class ="se-section-div")
            div(class='height-div')
              div(class='se-section')
                div(class='label')
                  | Customer
                if sell.customer_id
                  div(class='cinfo-div')
                    img(src='/default_avatar.png')
                    div(class='cinfo')
                      div(class='info')
                        | #{customer.first_name} #{customer.last_name}
                      div(class='info-sm')
                        | #{customer.company}
                else
                  div(class='info-none')
                    | None
              
              div(class='se-section')
                div(class='label')
                  | Status
                div(class='info')
                  | #{sell.status}

                                  
              div(class='se-section')
                div(class='label')
                  | Paid
                if sell.paid
                  div(class='info')
                    =date(sell.paid_date)
                  div(class='info')
                    | #{sell.payment_method}
                else
                  div(class='info-none')
                    | Not Paid
                  
        div(class='bottom' style='border: none')    
