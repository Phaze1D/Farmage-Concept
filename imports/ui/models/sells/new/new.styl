.pay-button
  width: 100%
  margin-top: 40px
  font-size: 20px
  text-align: center;
  padding: 3px
  background-color: #00C853
  // font-weight: 300
  color: white


.detail-title-wrapper
  width: 100%
  border-bottom: 1px solid #e0e0e0
  margin-bottom: 20px
  display: flex;

  .detail-title
    font-size: 20px
    font-weight: 300
    align-self: center;
    flex-grow: 1

  .db-wrapper
    height: 48px
    width: 48px
    margin-left: 10px



    .add-detail
      display: flex;
      justify-content: center;
      height: 100%
      width: 100%
      border-radius: 24px
      background-color: transparent;


      & i
        align-self: center;


.discount-input
  width: 100%

  .input-container
    flex: none;
    width: calc(100% - 30px)


.discount-select
  position: absolute;
  width: 26px
  height: 26px
  bottom: 10px
  right: 10px
  text-align: center;
  cursor: pointer;
  border-radius: 4px
  display: flex;
  justify-content: center;

  .discount-icon
    font-size: 18px;
    align-self: center;

.sell-detail
  .product-info
    padding-top: 5px
    display: flex;
    // justify-content: center;

    .p-nsk
      align-self: center;
      padding-left: 10px
      max-width: calc(100% - 64px);


      .p-name
        font-size: 19px
        font-weight: 300
        color: #737373
        line-height: 17px

      .p-description
        color: #9E9E9E
        font-weight: 300
        width: 100%
        overflow: hidden;
        white-space: nowrap;
        text-overflow: ellipsis;

      span
        display: inline-block;
        font-size: 14px
        white-space: nowrap;
        font-weight: 300;
        color: #737373


      span.p-sku
        display: inline-block;
        font-size: 10px
        font-weight: 300;
        color: #BDBDBD

    img
      width: 56px
      height: 56px
      border-radius: 50%
      align-self: center;


  .detail-info
    margin: 0 0 15px 0
    padding: 15px 0
    border-bottom: 1px solid #e0e0e0
    display: flex;

    .col
      width: 25%
      padding-top: 6.5px

      .label
        font-size: 12px
        font-weight: 300;
        color: #737373
        box-sizing: border-box;
        -webkit-font-smoothing: antialiased;

      .value
        padding-top: 1px
        font-size: 16px;
        font-weight: 300;
        -webkit-font-smoothing: antialiased;
        line-height: 24px;
