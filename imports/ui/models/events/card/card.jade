template(name="EventCard")
  div(class='mCard')
    +PaperCard elevation=1 rippleOn=false
      div(class='show' style='display: none; opacity: 0')
        if show.get
          +EventShow event=event title=showTitle
          
      div(class='mCard-content')
        +PaperButton elevation=0 rippleOn=true classes='options-b' raise=0
          i(class='material-icons')
           | more_vert
        
        div(class='upper')
          div(class='top')             
            div(class='titles')
              div(class='main-title text-overflow card-expand-action')
                | Event For #{forType}
              if subscriptionsReady
                div(class='sub-title text-overflow card-shrink-action')
                  | #{identifer}
                
          div(class='upper-mid')
            div(class='main' style='margin: 0;')
              div(class='info')
                | #{event.amount} 
                
              div(class='sub')    
                div(class='sub-unit')
                  div(class='label')
                    | Created At
                  div(class='sub-info')
                    =date(event.createdAt)
                    
            //- div(class='fake-tab')
            //-   div(class='fake-tab-title')
            //-     | User Information
                
        div(class='middle')
          div(class='e-div')
            div(class='event-info')
              img(src='/default_avatar.png')
              
              div(class='einfo-div' style='max-width: calc(100% - 120px)')
                div(class='main-title text-overflow')
                  | #{createdBy.profile.first_name} #{createdBy.profile.last_name}
                div(class='sub-title text-overflow')
                  | #{createdByEmail}
                  
              div(class='einfo-div' style='flex-grow: 0; padding: 0')
                div(class='main-title')
                  | Manual 
                  div(class='manual' manual='#{isManual}')
                
                    
                
            
