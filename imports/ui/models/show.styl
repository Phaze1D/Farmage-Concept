.show
  position: absolute;
  display: flex
  top: 0
  left: 0
  right: 0
  z-index: 2
  min-height: 100%
  background-color: white
  justify-content: center;

.show-tool
  position: absolute;
  width: 100%
  background-color: #eee
  left: 0;
  height: 64px
  padding: 5px 0 0 5px
  z-index: 2

  .tool-title
    height: 100%
    padding: 0 70px
    display: table
    width: 100%

    div
      display: table-cell;
      vertical-align: middle;
      text-align: center;
      font-size: 16px
      font-weight: 300

  .so-button
    position: absolute;
    height: 56px
    width: 56px
    display: flex;
    justify-content: center;
    background-color: transparent;
    border-radius: 50px
    align-items: center;
    top: 5px

  .back
    left: 5px

  .more-ver
    right: 5pxpx

.show-area
  position: relative;
  min-height: 100%
  width: 100%
  // max-width: 820px

  .top
    position: absolute;
    padding-top: 64px
    width: 100%
    height: 276px
    display: flex;
    background-color: #eee
    flex-direction: column;
    align-items: center;
    justify-content: center;

    @media (max-width: 1024px)
      height: 246px

    img
      border-radius: 50%
      height: 140px
      width: 140px
      @media (max-width: 1024px)
        height: 110px
        width: 110px

    h3
      font-size: 23px
      font-weight: 300;
      margin: 10px 0 5px

    h4
      font-size: 14px
      font-weight: 300
      color: #757575
      margin: 0 0 10px

  .scroll-section
    overflow: auto;
    height: 100vh
    position: absolute;
    top: 0
    width: 100%

    &::-webkit-scrollbar
      display: none;

  .middle
    background-color: transparent;
    padding-top: 276px
    @media (max-width: 1024px)
      padding-top: 246px


.flex-grid
  display: flex;
  padding: 8px
  flex-wrap: wrap;


  .section
    flex-grow: 1
    min-width: 189px
    margin: 16px
    padding: 10px 0
    display: flex
    align-items: center

    i
      color: #757575
      margin-right: 15px


    .it
      border-bottom: 1px solid #BDBDBD
      flex-grow: 1
      padding-bottom: 15px
      height: 100%;
      display: flex;

      .info-div
        align-self: center;

      .title
        font-size: 14px
        font-weight: 300;
        color: #757575
        padding: 10px 0 5px

      .info
        font-size: 16px
        font-weight: 300;
        color: black

      .info-none
        font-size: 12px
        font-weight: 300;
        color: #BDBDBD




.show-fab
  position: absolute;
  width: 60px
  height: 60px
  top: 294px;
  right: 30px;
  border-radius: 50%
  z-index: 2;
  opacity: 1
  background-color: #009688;

  @media (max-width: 1024px)
    width: 56px
    height: 56px
    top: 266px;
    right: 15px;
