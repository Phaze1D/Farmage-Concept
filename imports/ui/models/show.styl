.show
  position: absolute;
  display: flex
  top: 0
  left: 0
  right: 0
  z-index: 1
  min-height: 100%
  background-color: white
  justify-content: center;

.show-tool
  position: absolute;
  left: 0;
  height: 64px
  padding: 5px 0 0 5px

  .back-button
    height: 56px
    width: 56px
    display: flex;
    justify-content: center;
    background-color: transparent;
    border-radius: 50px


    i
      align-self: center;

.show-area
  position: relative;
  min-height: 100%
  width: 100%
  // max-width: 820px

  .top
    padding-top: 56px
    width: 100%
    height: 276px
    display: flex;
    background-color: #eee
    flex-direction: column;
    align-items: center;
    @media (max-width: 1024px)
      height: 246px

    img
      border-radius: 50%
      height: 140px
      width: 140px
      @media (max-width: 1024px)
        height: 110px
        width: 110px

    h3
      font-size: 23px
      font-weight: 300;
      margin: 10px 0 5px

    h4
      font-size: 14px
      font-weight: 300
      color: #757575
      margin: 0





.show-fab
  position: absolute;
  width: 60px
  height: 60px
  top: 294px;
  right: 30px;
  border-radius: 50%
  z-index: 2;
  opacity: 1
  background-color: #009688;

  @media (max-width: 1024px)
    width: 56px
    height: 56px
    top: 266px;
    right: 15px;
