template(name='IngredientShow')
  div(class='show-area elevation-0') 
    
    div(class='show-tool')
      +PaperButton classes="so-button back card-shrink-action" raise=0 rippleOn=true submit=false elevation=0
        i(class="material-icons")
          | arrow_back
          
      div(class='tool-title text-overflow')
        div
          | #{toolT}
        
      +PaperButton classes="so-button more-ver card-shrink-action" raise=0 rippleOn=true submit=false elevation=0
        i(class="material-icons")
          | more_vert
          
          
    div(class='top')
      img(src='/no_image0.png')
      h3
        | #{ingredient.name}
        
    div(class='scroll-section')
    
      //- +PaperButton classes="show-fab js-show-new" elevation=2 rippleOn='true' rippleFill='white'
      //-   div(class='plus-icon-div' data-template='ingredientsUpdate')
      //-     i(class="material-icons plus-icon")
      //-       | #{fabT}
    
      div(class='middle')
        +PaperTabPanel tabs=tabs scrollable=true classes='show-bar'     
          +PaperTab classes='active-panel show-panel' index=0
            div(class='flex-grid')
              div(class='section elevation-0')
                div(class='it')
                  div(class='info-div')
                    div(class='title')
                      | Name
                    div(class='info')
                      | #{ingredient.name}
                  div(class='info-div')
                    div(class='title')
                      | Measurement Unit
                    div(class='info')
                      | #{ingredient.measurement_unit}
                      
                      
              div(class='section elevation-0')
                div(class='it')
                  div(class='info-div')
                    div(class='title')
                      | Total Stock
                    div(class='info')
                      | 123
                  div(class='info-div')
                    div(class='title')
                      | Total Yields
                    div(class='info')
                      | 12 
                  div(class='info-div')
                    div(class='title')
                      | Yields Available
                    div(class='info')
                      | 4
            
            +Timestamp item=ingredient
            
          +PaperTab index=1
          
        
        
