.ingredients
  & .card-margin
    margin-bottom: 10px
    padding: 0 5px
    float: left
    transition: width .20s ease-in-out

  & .card
    padding: 0 15px
    margin: auto;


    & .title
      font-weight: 400
      font-size: 24px
      margin: 24px 0 8px

    & .subtitle
      font-weight: 300
      font-size: 14px
      color: #9E9E9E

    & .divider
      background-color: lightgrey
      height: 1px
      margin: 16px 0

    & .action-button
      padding: 8px 8px
      background-color: transparent;
      margin: 0 8px 6px -8px
      font-weight: 400
      color: rgba(0, 0, 0, 0.7);

    & .image-col
      padding: 0

    & .image-header
      width: 100%
      height: 200px
      overflow: hidden;
      background-image:    url('/no_image.png');
      background-size:     cover;                      /* <------ */
      background-repeat:   no-repeat;
      background-position: center center;
