template(name='IngredientCard')
  div(class='mCard')
    +PaperCard elevation=1
      div(class='mCard-content')
        +PaperButton elevation=0 rippleOn=true classes='options-b' raise=0
          i(class='material-icons')
           | more_vert
           
        div(class='upper')
          div(class='top')
            img(src='/no_image0.png')
            
            div(class='titles')
              div(class='main-title text-overflow')
                | #{ingredient.name} 
                
              div(class='sub-title text-overflow')
                | Measurement Unit - #{ingredient.measurement_unit}
        
          div(class='upper-mid')
            div(class='main')
              div(class='info')
                | 239.23 
                span
                  | #{ingredient.measurement_unit}
                
              div(class='sub')
                | In Stock
              
            
  //- Total Currently Available 
