.new-action
  position: fixed;
  width: 56px
  height: 56px
  border-radius: 50%
  bottom: 15px;
  right: 15px;
  z-index: 2;
  opacity: 1
  background-color: #009688;

  @media (min-width: 1024px) {
    width: 60px
    height: 60px
    bottom: 30px;
    right: 30px;
  }

.plus-icon-div
  position: absolute;
  top: 0
  width: 56px;
  height: 56px;
  display: flex;
  justify-content: center;
  z-index: -1
  @media (min-width: 1024px) {
    width: 60px
    height: 60px
  }

  .plus-icon
    align-self: center;
    color: white
    cursor: pointer;
    @media (min-width: 1024px) {
      font-size: 28px
    }


.card-wrapper
  display: flex
  flex-wrap: wrap;
  justify-content: center;

  .card
    width: 330px
    margin: 0 8px 16px
    height: 460px
    max-width: calc(100% - 16px);

    .content
      width: 100%
      height: 100%

      .top
        padding: 25px 15px 0px
        height: 32%
        background-color: #EEEEEE

      .bottom
        position: relative;
        height: 68%

      .options-b
        position: absolute;
        top: 0
        right: 0
        width: 36px
        height: 36px
        margin: 24px 5px 0 0
        display: flex;
        justify-content: center;
        margin-left: auto;
        border-radius: 50%
        background-color: transparent;

        i
          color: #757575
          align-self: center;

      .divider
        background-color: lightgrey
        height: 1px
        margin: 16px 0

      .action-button
        padding: 8px 8px
        background-color: transparent;
        margin: -8px 8px -8px 0px
        font-weight: 400
        font-size: 14px
        color: black


.organ-card-title
  font-size: 24px
  font-weight: 300
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  cursor: pointer;
  margin-bottom: 8px
  width: calc(100% - 48px)

.organ-founder
  color: #757575
  font-size: 13px
  font-weight: 300
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;

.info-amount
  padding: 9px 0px;
  font-size: 34px;


.chart
  width: 100%
  flex-grow: 1
