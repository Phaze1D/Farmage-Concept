template(name="organizations.index")

  +PaperRightPanel callbacks=rightCallbacks
    div(class='js-show-right')
    div(class="js-right-content")
    if expanded.get
      +organizationsNew
    
  
  +PaperButton classes="new-action js-show-new" elevation=2 rippleOn='true' rippleFill='white'
    div(class='plus-icon-div')
      i(class="material-icons plus-icon")
        | add
  
  div(class="organizations main-content")
    div(class='card-wrapper')
      each organization in organizations
        div(class='card')
          +PaperCard elevation=1
            div(class='content')
              div(class='top')
                div(class='organ-card-title card-expand-action')
                  | #{organization.name}
                div(class='organ-founder card-shrink-action')
                  with founder organization
                    | By #{profile.first_name} #{profile.last_name}
                    
                div(class='info-amount')
                  | $234.46
                  
              div(class='bottom')
                +PaperTabPanel tabs=tabs
                  +PaperTab 
                    canvas(class='chart')
                  
                  +PaperTab 
                    canvas(class='chart')
                  
                
              //- div(class='divider')
              
              //- +PaperButton elevation=0 rippleOn=true classes='action-button' raise=0
              //-   | SETTINGS
            
              
              +PaperButton elevation=0 rippleOn=true classes='options-b' raise=0
                i(class='material-icons')
                 | more_vert
              
  
  
