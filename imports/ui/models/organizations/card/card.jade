template(name='OrganizationCard')
  div(class='mCard')
    +PaperCard elevation=1
      div(class='mCard-content')
        +PaperButton elevation=0 rippleOn=true classes='options-b' raise=0
          i(class='material-icons')
           | more_vert
      
        div(class='upper')
          div(class='top')
            div(class='titles')
              div(class='main-title')
                | #{organization.name}
              div(class='sub-title')
                with founder organization
                  | By #{profile.first_name} #{profile.last_name}
            
          div(class='upper-mid')
            div(class='main')
              div(class='info')
                | $234.46
              div(class='sub')
                | Last 5 Days

        div(class='middle')
          +PaperTabPanel tabs=tabs tabClasses='card-bar'
            +PaperTab classes="chart-div active-panel" index=0
              canvas(class='sells-chart chart')
            
            +PaperTab classes="chart-div" index=1
              canvas(class='expenses-chart chart')
            

      
        
        
