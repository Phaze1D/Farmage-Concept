template(name="productsNew")
  div(class="products-new")
    +dialogMixin
        
    form(class="js-product-new-form")
      +PaperHeaderPanel id="right"
        +PaperHeader id="right" title="New Product"
          +PaperButton classes="save-icon-div js-submit-new-product" raise=0 rippleOn=true submit=true
            i(class="material-icons")
              | check
              
          +PaperButton classes="remove-icon-div js-hide-new js-hide-right" raise=0 rippleOn=true submit=false
            i(class="material-icons")
              | clear
        
        +PaperHeaderMain id="right"
          div(class='organization-bottom')
            div(class='input-area')
              div(class='grid-wrapper')
                div(class='col-12 p-right p-left')
                  +PaperInput type="text" name="name" label="Product Name" focusColor="darkblue" size="size-medium"
                  
              div(class='grid-wrapper')
                div(class="col-8 p-left p-right")
                  +PaperInput type="text" name="size" label="Size" focusColor="darkblue"
                div(class='col-4 p-right')
                  +PaperInput type="text" name="sku" label="SKU" focusColor="darkblue"

              div(class='grid-wrapper')
                div(class='col-4 p-right p-left')
                  +PaperInput type="number" classes="js-calc-p uprice" name="unit_price" label="Price" focusColor="darkblue" prefix="$" step="0.01" min='0' span="(tax exc)"
                div(class='col-4 p-right')
                  +PaperInput type="number" classes="js-calc-p tax" name="tax_rate" label="Tax Rate" focusColor="darkblue" defix="%" step="any" min="0" max="100"
                div(class='col-4 p-right')
                  +PaperInput type="number" classes="js-calc-p tprice" name="none" label="Price" value="0.00" focusColor="darkblue" prefix="$" step="any" min='0' span="(tax inc)" disabled="true"
                  
                  
                  
              div(class='grid-wrapper')
                div(class='col-12 p-right p-left')
                  +PaperInput type="textarea" name="description" label="Description" focusColor="darkblue" charMax='512' showCount=true
              
              div(class='grid-wrapper')
                div(class='col-12 p-right p-left')
                  +PaperButton raise=0 submit=false rippleOn=false classes="js-show-d button-wrapper"
                    div(class="resources-b js-dialog-b" data-sub='ingredients' data-many='true')
                      div(class="text-div") Resources
                      div(class="icon-div")
                        i(class="material-icons icon") add_circle
                        
              
              each ingredient in clists.get 'ingredients'
                div(id='dialog-scrollTo' class='grid-wrapper')
                  div(class='col-7 p-left')
                    div(class='ing-info')
                      div(class='ing-img')
                        div(class="circle-image")
                      
                      div(class='ing-text')
                        div(class='ing-name')
                          | #{ingredient.name}
                        
                      
                  div(class='col-5 p-right p-left')
                    div(class='ing-info')
                      +PaperInput type="number" span="pre product" classes='amount-input' name=ingredient._id label="Amount" focusColor="darkblue" min="0" defix=ingredient.measurement_unit labelFloat=false size='size-small' hideTop=true
                    
            
                  
