template(name='ProductShow')
  div(class='show-area elevation-1') 
    
    div(class='show-tool')
      +PaperButton classes="so-button back card-shrink-action" raise=0 rippleOn=true submit=false elevation=0
        i(class="material-icons")
          | arrow_back
          
      div(class='tool-title text-overflow')
        div
          | #{toolT}
        
      +PaperButton classes="so-button more-ver card-shrink-action" raise=0 rippleOn=true submit=false elevation=0
        i(class="material-icons")
          | more_vert
          
      
          
    div(class='top')
      img(src='/no_image0.png')
      h3
        | #{product.name}
      h4
        | #{product.sku}
        
    div(class='scroll-section')
    
      +PaperButton classes="show-fab" elevation=2 rippleOn='true' rippleFill='white'
        div(class='plus-icon-div')
          i(class="material-icons plus-icon")
            | #{fabT}
    
      div(class='middle')
        +PaperTabPanel tabs=tabs scrollable=true classes='show-bar'     
          +PaperTab classes='active-panel show-panel' index=0
            div(class='flex-grid')
              div(class='section elevation-1')
                div(class='it')
                  div(class='info-div')
                    div(class='title')
                      | Description
                    if product.description
                      div(class='info')
                        | #{product.description}
                    else
                      div(class='info-none')
                        | None
            
            div(class='flex-grid')
              div(class='section elevation-1')
            
          +PaperTab index=1
          
        
        
