template(name='ProductShow')
  div(class='show-area elevation-0') 
    
    div(class='show-tool')
      +PaperButton classes="so-button back card-shrink-action" raise=0 rippleOn=true submit=false elevation=0
        i(class="material-icons")
          | arrow_back
          
      div(class='tool-title text-overflow')
        div
          | #{toolT}
        
      +PaperButton classes="so-button more-ver card-shrink-action" raise=0 rippleOn=true submit=false elevation=0
        i(class="material-icons")
          | more_vert
          
      
          
    div(class='top')
      img(src='/no_image2.jpg')
      h3
        | #{product.name}
      h4
        | #{product.sku}
        
    div(class='scroll-section')
    
      +PaperButton classes="show-fab" elevation=2 rippleOn='true' rippleFill='white'
        div(class='plus-icon-div')
          i(class="material-icons plus-icon")
            | #{fabT}
    
      div(class='middle')
        +PaperTabPanel tabs=tabs scrollable=true classes='show-bar'     
          +PaperTab classes='active-panel show-panel' index=0
            div(class='flex-grid')
              div(class='section elevation-1')
                div(class='it')
                  div(class='info-div')
                    div(class='title')
                      | Description
                    if product.description
                      div(class='info')
                        | #{product.description}
                    else
                      div(class='info-none')
                        | None
            
            div(class='flex-grid')
              div(class='section elevation-1')
                div(class='it')
                  div(class='info-div')
                    div(class='title')
                      | Name
                    div(class='info')
                      | #{product.name}
                  if product.size
                    div(class='info-div')
                      div(class='title')
                        | Size
                      div(class='info')
                        | #{product.size}
                  div(class='info-div')
                    div(class='title')
                      | SKU
                    div(class='info')
                      | #{product.sku}
                      
              div(class='section elevation-1')
                div(class='it')
                  div(class='info-div')
                    div(class='title')
                      | Price
                      span 
                        | (Tax Exc)
                    div(class='info')
                      | $#{product.unit_price}
                      
                    div(class='title')
                      | Tax Rate
                    div(class='info')
                      | #{product.tax_rate}%
                    
                  div(class='info-div')
                    div(class='title')
                      | Price
                      span 
                        | (Tax Inc)
                    div(class='info')
                      | $#{totalPrice}
                      
            div(class='flex-grid')
              div(class='section elevation-1')
                div(class='it')
                  div(class='info-div')
                    div(class='title')
                      | Stock
                    div(class='info-big')
                      | 123
              div(class='section elevation-1')
                div(class='it')
                  div(class='info-div')
                    div(class='title')
                      | Total Inventories
                    div(class='info')
                      | 12 
                  div(class='info-div')
                    div(class='title')
                      | Inventories Available
                    div(class='info')
                      | 4
                   
                
            div(class='sub-title')
              | Ingredients
            if subscriptionsReady
              div(class='flex-grid')
                each ingredient in ingredients
                  +PaperButton classes="section" raise=true rippleOn=true submit=false elevation=1
                    div(class='it')
                      div(class='info-div' style='padding-top: 5px')
                        div(class='flex-info')
                          img(src='/no_image2.jpg')
                          
                          div(class='info-flex-sec')
                            div(class='info text-overflow')
                              | #{ingredient.name}
                            div(class='info-small text-overflow')
                              =ingAmount(ingredient._id)
                              | #{ingredient.measurement_unit}
                              
                          i(class='material-icons' style='margin: 0 0 0 15px')
                            | keyboard_arrow_right
              
              +Timestamp item=product
              
            
          +PaperTab index=1
          
        
        
