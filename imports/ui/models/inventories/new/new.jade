template(name='inventoriesNew')
  div(class="inventories-new")
    +dialogMixin
        
    form(class="js-inventories-new-form js-form-event")    
      +PaperHeaderPanel id="right" 
        +PaperHeader id="right" title="New Inventory"
          +PaperButton classes="save-icon-div js-submit-new-inventory" raise=0 rippleOn=true submit=true
            i(class="material-icons")
              | check
              
          +PaperButton classes="remove-icon-div js-hide-new js-hide-right" raise=0 rippleOn=true submit=false
            i(class="material-icons")
              | clear
        
        +PaperHeaderMain id="right"
          div(class='organization-bottom')
            div(class='input-area')
              
              div(class='grid-wrapper')
                div(class='col-6 p-left')
                  +PaperInput type="text" name="name" label="Identifier" focusColor="darkblue" size="size-small"
                
                div(class='col-6 p-left p-right')
                  +PaperInput type="text" name="expiration_date" label="Expiration Date" focusColor="darkblue" size="size-small"
                  
              div(class='grid-wrapper')
                div(class='col-12 p-right p-left')
                  +PaperInput type="textarea" name="notes" label="Notes" focusColor="darkblue" charMax='512' showCount=true
                  
                  
              div(class='grid-wrapper')
                div(class='col-6 p-left')
                  +PaperInput type="number" name="amount" label="Amount" focusColor="darkblue" size="size-small" disabled='true' value='0' min='0' step='any'
                
                div(class='col-6 p-right p-left')
                  div(class='b-change-wrapper')
                    +PaperButton raise=1 elevation=1 submit=false rippleOn=true classes='b-change js-event-b'
                      | #{eventTitle.get}
                      
              +eventMixin
                
              
              div(class='grid-wrapper')
                div(class='col-12 p-right p-left')
                  +PaperButton raise=0 submit=false rippleOn=true classes="js-show-d button-wrapper"
                    div(class="resources-b js-dialog-b" data-sub='products' data-many='false')
                      div(class="text-div-lg") Product
                      div(class="icon-div")
                        i(class="material-icons icon") add_circle
                        
                        
              if product
                div(id='dialog-scrollTo' class='grid-wrapper')
                  div(class='col-12 p-right p-left')
                    div(class='product-info')
                      img(src='/no_image0.png')
                      div(class='p-nsk')
                        div(class='p-name')
                          | #{product.name}
                          
                          span(class='p-sku')
                            | SKU: #{product.sku}
                          
                        div(class='p-description')
                          | #{product.description}
                        
                      
                    div(class='product-r')
                      div(class='grid-wrapper')
                        div(class='col-12')
                          div(class='ing-subtitle')
                            | Product Resources
                      
                      each ping in product.pingredients
                        with ingredient ping
                          div(class='yield-b-wrapper')
                            div(class='grid-wrapper')
                              div(class='col-12')
                                +PaperButton raise=0 submit=false rippleOn=true classes="js-show-d yield-b"
                                  div(class="js-dialog-b" data-sub='yields' data-many='true' data-parent='ingredient' data-parentid="#{_id}")
                                    div(class='y-divider')
                                      div(class='y-subtitle')
                                        | Inventory Amount - 0
                                      div(class="icon-div")
                                        i(class="material-icons icon") add_circle
                                        
                                    div(class='ing-info')
                                      img(src='/no_image0.png')
                                      
                                      div(class='ing-nsk')
                                        div(class='ing-name')
                                          | #{name}
                                        div(class='ing-a')
                                          | #{ping.amount} #{measurement_unit}
                                          span
                                            | pre product
                                                                          
                            each yield in yields ping
                              div(class='grid-wrapper')
                                div(class='col-12')
                                  div(class='yield-section')
                                    div(class='yield-sub-sec')
                                      div(class='yield-subtitle')
                                        | Yield Identifier
                                      div(class='yield-name')
                                        | #{yield.name}
                                        
                                    div(class='yield-sub-sec ml')
                                      div(class='yield-subtitle')
                                        | Current Yield Amount
                                      div(class='yield-amount')
                                        | #{yield.amount}
                              
                                  div(class='yield-input-sec')
                                    div(class='yield-max-div')
                                      +PaperButton raise=1 elevation=1 submit=false rippleOn=true classes="max-b"
                                        | Max
                                      
                                    div(class='yield-input-div')
                                      +PaperInput type="number" name="amount_taken" label="Amount Taken" focusColor="darkblue" size="size-small" min='0' step='any' defix=measurement_unit labelFloat=false hideTop=true

                                    
