

.unit-div
  .provider-info
    padding-top: 5px
    display: flex;
    // justify-content: center;

    .p-nsk
      align-self: center;
      max-width: calc(100% - 64px);


      .p-name
        font-size: 18px
        font-weight: 300
        color: #737373

      .p-description
        color: #9E9E9E
        font-weight: 300
        font-size: 12px
        width: 100%
        overflow: hidden;
        white-space: nowrap;
        text-overflow: ellipsis;

      span
        display: inline-block;
        font-size: 14px
        white-space: nowrap;
        font-weight: 300;
        color: #737373


      span.p-sku
        display: inline-block;
        font-size: 10px
        font-weight: 300;
        color: #BDBDBD

    img
      width: 56px
      height: 56px
      margin-right: 10px
      border-radius: 50%
      align-self: center;
