template(name='ExpenseCard')
  div(class='mCard')
    +PaperCard elevation=1 rippleOn=false
      div(class='show' style='display: none; opacity: 0')
        if show.get
          +ExpenseShow expense=expense title=showTitle
        
      div(class='mCard-content')
        +PaperButton elevation=0 rippleOn=true classes='options-b' raise=0
          i(class='material-icons')
           | more_vert
        
        div(class='upper')
          div(class='top')             
            div(class='titles')
              div(class='main-title text-overflow card-expand-action')
                | #{expense.name} 

              div(class='sub-title text-overflow')
                | #{expense._id}
              
          div(class='upper-mid')
            div(class='main' style='margin: 0;')
              div(class='info')
                | $#{totalPrice} 
                
              div(class='sub')    
                div(class='sub-unit')
                  div(class='label')
                    | Unit Price
                  div(class='sub-info')
                    | $#{expense.price}
                
                div(class='sub-unit')
                  div(class='label')
                    | Quantity
                  div(class='sub-info')
                    | #{expense.quantity}
                    
                    
        div(class='middle')
          div(class ="se-section-div")
            div(class='height-div')
              div(class='se-section')
                div(class='label')
                  | Provider
                if expense.provider_id
                  div(class='cinfo-div')
                    img(src='/default_avatar.png')
                    div(class='cinfo')
                      div(class='info')
                        | #{provider.first_name} #{provider.last_name}
                      div(class='info')
                        | #{provider.company}
                else
                  div(class='info-none')
                    | None
              
              div(class='se-section')
                div(class='label')
                  | Unit
                div(class='info')
                  | #{unit.name}
                  
              div(class='se-section')
                div(class='label')
                  | Created At
                div(class='info')
                  =date(expense.createdAt)
                  
        div(class='bottom' style='border: none')    
  
