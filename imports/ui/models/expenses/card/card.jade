template(name='ExpenseCard')
  div(class='mCard')
    +PaperCard elevation=1 rippleOn=false
      div(class='mCard-content')
        +PaperButton elevation=0 rippleOn=true classes='options-b' raise=0
          i(class='material-icons')
           | more_vert
        
        div(class='upper')
          div(class='top')             
            div(class='titles')
              div(class='main-title text-overflow')
                | #{expense.name} 

              div(class='sub-title text-overflow')
                | #{unit.name}
              
          div(class='upper-mid')
            div(class='main' style='margin: 0; padding: 0')
              div(class='info')
                | $#{totalPrice} 
                
              div(class='sub')    
                div(class='sub-unit')
                  div(class='label')
                    | Unit Price
                  div(class='sub-info')
                    | #{expense.price}
                
                div(class='sub-unit')
                  div(class='label')
                    | Quantity
                  div(class='sub-info')
                    | #{expense.quantity}
                    
            div(class='fake-tab')
              div(class='fake-tab-title')
                | Provider
        
        div(class='middle')
          if provider
            div(class='e-div')
              div(class='event-info')
                img(src='/default_avatar.png')
                
                div(class='einfo-div' style='max-width: calc(100% - 120px)')
                  div(class='main-title text-overflow')
                    | #{provider.first_name} #{provider.last_name}
                  div(class='sub-title text-overflow')
                    | #{provider.company}
          else
            div(class='provider-empty')
              div
                | None
                    
              
