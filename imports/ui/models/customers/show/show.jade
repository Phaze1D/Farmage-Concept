template(name='CustomerShow')
  div(class='show-area elevation-2')
    +PaperButton classes="show-fab" elevation=2 rippleOn='true' rippleFill='white'
      div(class='plus-icon-div')
        i(class="material-icons plus-icon")
          | edit
          
    div(class='show-tool')
      +PaperButton classes="back-button card-shrink-action" raise=0 rippleOn=true submit=false
        i(class="material-icons")
          | arrow_back
          
      
          
    div(class='top')
      img(src='/default_avatar.png')
      h3
        | #{customer.first_name} #{customer.last_name}
      h4
        | #{customer.company}
        
    
    div(class='middle')
      +PaperTabPanel tabs=tabs scrollable=true barClasses='show-tab' classes='show-tab'
        +PaperTab
          div(class='flex-grid')
            div(class='section')
              div(class='it')
                div(class='title')
                  | Notes
                if customer.notes
                  div(class='info')
                    | #{customer.notes}
                else
                  div(class='info-none')
                    | None
                  
          div(class='flex-grid')
            div(class='section')
              i(class='material-icons')
                | email
              
              div(class='it')
                div(class='title')
                  | Email
                if customer.email
                  div(class='info')
                    | #{customer.email}
                else
                  div(class='info-none')
                    | None
                    
            div(class='section')
              i(class='material-icons')
                | location_on
                
              div(class='it')
                if addresses
                  each address in addresses
                    div(class='title')
                      if address.name
                        | #{address.name}
                      else
                        | Address
                    div(class='info')
                      div(class='add-info')
                        | #{address.street}
                      div(class='add-info')
                        | #{address.street2}
                      div(class='add-info')
                        if address.city
                          | #{address.city}, #{address.state}
                      div(class='add-info')
                        | #{address.zip_code}
                      div(class='add-info')
                        | #{address.country}
                
                else
                  div(class='title')
                    | Addresses
                  div(class='info-none')
                    | None
                  
                  
            div(class='section')
              i(class='material-icons')
                | phone
                
              div(class='it')
                if telephones
                  each telephone in telephones
                    div(class='title')
                      if telephone.name
                        | #{telephone.name}
                      else
                        | Telephone
                    div(class='info')
                        | #{telephone.number}
                
                else
                  div(class='title')
                    | Telephones
                  div(class='info-none')
                    | None
      
                
            
        +PaperTab
          
        
        
