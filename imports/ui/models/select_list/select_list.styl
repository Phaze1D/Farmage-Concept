.list
  height: 100%
  width: 100%;
  padding-top: 64px
  background-color: #FAFAFA
  overflow-y: scroll;
  overflow-x: hidden;

  @media (max-width: 768px){
    padding-top: 56px
  }

  & .header
    position: absolute;
    z-index: 2
    top: 0
    left: 0
    height: 64px
    width: 100%
    background-color: white

    @media (max-width: 768px){
      height: 56px
    }

    & .title-div
      display: inline-flex;
      height: 100%
      position: absolute;
      z-index: -1

      & .title
        font-size: 18px
        font-weight: 300
        align-self: center;



    & .search-bar
      // width: 40%
      height: 100%
      display: flex;
      float: right;
      justify-content: flex-end;
      background-color: white

      & .search-input-div
        position: relative;
        overflow: hidden;
        width: 40%
        display: flex;
        justify-content: center;

        @media(max-width: 424px){
          max-width: 200px
        }

        @media(max-width: 374px){
          max-width: 150px
        }

        & .search-input
          width: 100%
          align-self: center;

          & .input-container
            padding-right: 24px

        & .cross-div
          display: flex;
          position: absolute;
          height: 100%
          right: 0
          top: 0
          z-index: 2
          cursor: pointer;


          & i
            font-size: 22px
            align-self: center;
            background-color: white


  & .b-wrap
    width: 54px
    height: calc(100% - 10px)
    border-radius: 40px
    margin: 5px 5px
    display: flex;
    justify-content: center;

    @media (max-width: 768px){
      width: 46px

    }

    & i
      align-self: center;



  & .items
    background-color: #FAFAFA



.list-item
  width: 100%
  border-bottom: 1px solid #eee
  padding: 20px 18px
  display: flex;
  cursor: pointer;

  & .circle-image
    width: 64px
    height: 64px
    border-radius: 50%
    background-image:    url('/no_image0.png');
    background-size:     cover;                      /* <------ */
    background-repeat:   no-repeat;
    background-position: center center;

    // & img
    //   width: 56px
    //   height: 56px


  & .checker-div
    height: 100%
    float: right;
    align-self: center;
    margin-left: auto;


  & .info-div
    flex-grow: 1
    padding: 5px 18px
    display: flex;

    & div
      align-self: center;

      & .main
        font-size: 16px

      & .sub
        font-size: 14px
        color: #9E9E9E
        font-weight: 300
