.list
  height: 100%
  width: 100%;
  background-color: #FAFAFA


  .header-panel
    position: absolute;
    z-index: 2
    top: 0
    left: 0
    height: 64px
    width: 100%
    background-color: white

    @media (max-width: 768px){
      height: 56px
    }

    &.tabs-true
      height: 128px

      @media (max-width: 768px){
        height: 112px
      }



.options-panel
  position: relative;
  display: flex;
  height: 100%
  width: 100%

  &.tabs-true
    height: 50%


.b-wrap
  width: 54px
  height: calc(100% - 10px)
  border-radius: 40px
  align-self: center;
  display: flex;
  margin: 0 5px
  flex-shrink: 0
  justify-content: center;

  @media (max-width: 768px){
    width: 46px
  }

  & i
    align-self: center;


.search-tools
  height: 100%
  flex-grow: 1
  display: flex;
  justify-content: flex-end;

  .search-input-div
    position: relative;
    overflow: hidden;
    display: flex;
    justify-content: center;
    background-color: white

    .search-input
      width: 100%
      align-self: center;

      .input-container
        padding-right: 24px

    .cross-div
      display: flex;
      position: absolute;
      height: 100%
      right: 0
      top: 0
      z-index: 2
      min-width: 34px
      cursor: pointer;
      justify-content: flex-end;


      i
        font-size: 22px
        align-self: center;
        background-color: white


.tab-panel
  height: 50%
  width: 100%;
  display: flex;

  .tab-underline
    position: absolute;
    left: 0
    bottom: 0
    width: 50%
    height: 1px
    border: 1px solid darkblue


  .tab
    position: relative;
    display: flex;
    border-radius: 30px
    justify-content: center;
    // padding-left: 30px
    width: 50%
    height: 75%
    align-self: flex-end;
    color: #757575
    cursor: pointer;

    &.active
      color: black

    .tab-title
      align-self: center;
      font-weight: 300
      font-size: 18px


.one-title
  z-index: -1;
  font-weight: 300;
  font-size: 20px;
  position: absolute;
  top: calc(50% - 11px);
  left: 64px;

  @media (max-width: 768px){
    left: 56px
  }



.items
  background-color: #FAFAFA
  height: calc(100% - 64px);
  margin-top: 64px
  overflow-y: scroll;
  overflow-x: hidden;
  @media (max-width: 768px){
    height: calc(100% - 56px);
    margin-top: 56px
  }

.tab-items
  position: absolute;
  width: 100%
  height: calc(100% - 128px);
  margin-top: 128px

  overflow-y: scroll;
  overflow-x: hidden;

  @media (max-width: 768px){
    height: calc(100% - 112px);
    margin-top: 112px
  }
