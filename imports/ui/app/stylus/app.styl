.list-item
  // position: relative;
  background-color: primColor
  box-shadow: 0 2px 2px 0 rgba(0, 0, 0, 0.14),
                  0 1px 5px 0 rgba(0, 0, 0, 0.12),
                  0 3px 1px -2px rgba(0, 0, 0, 0.2)
  width: auto
  height: 200px
  border-radius: 2px
  margin-bottom: 10px
  padding: 5px
  margin: 0
  left: auto;
  top: auto;
  margin-bottom: 10px

  transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1)
  transition-property: left, top, width, min-height, background-color
  transition-duration: 0.2s

