.paper-radio-container
  position: relative;
  width: 48px
  height: 48px
  overflow: hidden;
  display: flex
  justify-content: center;
  border-radius: 40px
  background-color: transparent;
  // z-index: -1

  .radio
    align-self: center;
    width: 18px
    height: 18px
    border: solid 2px
    border-radius: 36px
    cursor: pointer;
    z-index: 1


    .radio-mark
      position: absolute;
      left: 19px
      top: 19px
      height: 10px
      width: 10px
      border-radius: 18px
      transition: .2s all ease-in-out
      transform: scale(0,0);


      &.checked
        transform: scale(1,1);
