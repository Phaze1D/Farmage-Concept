.paper-radio-container
  position: relative;
  width: 48px
  height: 48px
  overflow: hidden;
  display: flex
  justify-content: center;
  border-radius: 40px
  background-color: transparent;
  // z-index: -1

  .radio
    align-self: center;
    width: 20px
    height: 20px
    border: solid 2px
    border-radius: 36px
    cursor: pointer;
    z-index: 1


    .radio-mark
      position: absolute;
      left: 18px
      top: 18px
      height: 12px
      width: 12px
      border-radius: 18px
      transition: .2s all ease-in-out
      transform-origin: translate3d(50%, 50%, 0)
      transform: scale(0,0);
      

      &.checked
        transform: scale(1,1);
