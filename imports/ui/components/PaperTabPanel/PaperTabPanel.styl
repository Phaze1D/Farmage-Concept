paper-tab-panel
  position: relative;
  box-sizing: border-box;
  width: 100%
  height: 100%
  display: flex;
  flex-direction: column;

  .tab-bar
    position: relative;
    width: 100%
    height: 48px
    display: flex;
    background-color: #eee


    .underline
      position: absolute;
      left: 0
      bottom: 0
      height: 2px
      background-color: black


    .bar-tab
      padding: 0 10px
      flex-basis: 0
      align-self: center;
      height: 100%
      flex-grow: 1
      position: relative;
      text-align: center;
      display: flex;
      justify-content: center;
      cursor: pointer;
      color: #757575

      &.active
        color: black

      .tab-title
        overflow: hidden;
        white-space: nowrap;
        text-overflow: ellipsis;
        font-weight: 300
        align-self: center;
        display: block

  .tab-main-wrapper
    overflow: hidden;
    flex-grow: 1
    display: flex;

  .tab-panel-main
    flex-grow: 1
    display: flex;
    width: 100%
    max-width: 100%
    // overflow: hidden;

    .single-tab-main
      padding: 15px 10px 5px 5px;
      flex-grow: 1
      flex-shrink: 0
      width: 100%
      max-width: 100%
      display: flex;
      flex-direction: column;
