paper-tab-panel
  div(class='tab-bar #{classes}')
    if showLine
      div(class='underline' style='width: #{tabWidth}%')
    each title in tabs
      div(class="bar-tab js-bar-tab {{active @index}} {{barClasses}}" data-index="{{@index}}" style='width: #{tabWidth}%' data-title=title)
        +PaperRipple fill='lightgrey'
        div(class='tab-title')
          | #{title}
      
  div(class="tab-main-wrapper")
    div(class='tab-panel-main #{classes}')
      +Template.contentBlock
