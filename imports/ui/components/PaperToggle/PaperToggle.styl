.paper-toggle
  width: 36px
  position: relative;
  padding: 3px 0px 0px 2px;
  cursor: pointer;

  .back-bar
    background-color: #bdbdbd
    width: 100%
    height: 14px
    border-radius: 30px

  .circle
    position: absolute;
    left: 0
    top: 0
    height: 20px
    width: 20px
    border-radius: 20px
    background-color: white
    box-shadow: rgba(0, 0, 0, 0.117647) 0px 1px 6px, rgba(0, 0, 0, 0.117647) 0px 1px 4px
