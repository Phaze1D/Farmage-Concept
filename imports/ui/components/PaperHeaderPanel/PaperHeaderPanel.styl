
.paper-header-panel
  width: 100%
  max-height: 100vh
  overflow-y: scroll
  overflow-x: hidden;
  -webkit-overflow-scrolling: touch;

.paper-header
  position: relative;
  width: 100%
  height: 212px
  background-color: #fff

  .header-content
    height: 100%

.paper-header-small
  position: fixed;
  top: -70px
  width: 100%
  height: 64px
  background-color: white
  z-index: 1
  // transform: translate3d(0, -100%, 0);



.paper-header-main
  box-sizing: border-box;
  min-height: calc(100vh - 212px)
  background-color: #fafafa
  overflow-x: hidden;


.header-main.content
  padding: 15px 8px 0
