
.paper-header-panel
  width: 100%
  max-height: 100vh
  overflow: auto

.paper-header
  position: absolute;
  width: 100%
  height: 212px
  background-color: #fff
  left: 0
  top: 0
  z-index: 1

.header-small
  position: relative
  width: 100%
  height: 64px
  z-index: 1


.header-large
  position: relative
  width: 100%
  height: 148px



.paper-header-main
  padding-top: 212px
  position: relative;
  box-sizing: border-box;
  min-height: 100vh
  background-color: #eee
  overflow-x: hidden;



.header-content
  position: absolute;
  left: 0
  top: 0
  height: 100%
  width: 100%
  z-index: 2

.header-main.content
  padding: 15px 8px 0
