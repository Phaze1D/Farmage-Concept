
.paper-header-panel
  position: relative;
  width: 100%
  max-height: 100vh
  overflow-y: scroll
  overflow-x: hidden;


.paper-header
  position: relative;
  width: 100%
  height: 212px
  background-color: #fff

  .header-content
    height: 100%

.paper-header-small
  position: fixed;
  top: 0px
  width: 100%
  height: 64px
  background-color: white
  z-index: 2
  transform: translate3d(0, -70px, 0);


  &.right-opened
    width: calc(65% - 240px) !important

  @media(min-width: 1024px)
    width: calc(100% - 240px)





.paper-header-main
  box-sizing: border-box;
  min-height: calc(100vh - 212px)
  background-color: #fafafa
  overflow-x: hidden;


.header-main.content
  padding: 15px 8px 0


.touchScroll
  -webkit-overflow-scrolling: touch;
