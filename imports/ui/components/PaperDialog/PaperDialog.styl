.paper-dialog-wrapper

  & .skrim
    position: fixed;
    display: flex;
    justify-content: center;
    width: 100%
    height: 100vh
    z-index: 5
    left: 0
    top: 0
    background-color: rgba(0, 0, 0, 0.7);

    &.opened
      display: flex;
      opacity: 0

    &.closed
      display: none;
      opacity: 1

    & .dialog
      align-self: center;
      width: 60%
      height: 80%
      max-width: 768px
      max-height: 768px

      background-color: white
      overflow-y: scroll;
      overflow-x: hidden;
      border-radius: 3px

      @media(max-width: 768px){
        height: 100%
        max-height: none;
        width: 100%
        border-radius: 0
      }
