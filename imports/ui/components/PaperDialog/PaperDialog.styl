.paper-dialog-wrapper

  .skrim
    position: fixed;
    display: flex;
    justify-content: center;
    width: 100%
    height: 100vh
    z-index: 5
    left: 0
    top: 0
    background-color: rgba(0, 0, 0, 0.7);

    &.opened
      display: flex;
      opacity: 0

    &.closed
      display: none;
      opacity: 1

    .dialog
      perspective: 1px;
      align-self: center;
      width: 60%
      height: 80%
      max-width: 768px
      position: relative;

      background-color: #fafafa
      overflow-y: hidden;
      overflow-x: hidden;
      border-radius: 2px

      @media(max-width: 768px){
        height: 100%
        max-height: none;
        width: 100%
        border-radius: 0
      }

      .new-action
        position: absolute;
        right: 15px
        bottom: 15px
